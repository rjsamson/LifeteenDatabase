    <% end %>
  <% if @date_event.id %>
  <%= link_to raw('<i class="icon-user icon-white"></i> Edit Contact Attendees'), date_event_contacts_path(@date_event), class: 'btn btn-primary' %>
  <% end %>
  </div>
<% end %>
