<%= form_for(@date_event) do |f| %>
  <% if @date_event.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4><%= pluralize(@date_event.errors.count, "error") %> prohibited this date event from being saved:</h4>
        <ul>
        <% @date_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <%=f.select(:date_event_type_id, DateEventType.all_asc.collect { |det| [det.value, det.id]}) %>
