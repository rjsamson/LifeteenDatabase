<!DOCTYPE html>
<html lang="en">
<head>
  <title>LifeteenDatabase</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>

</head>
<body>
<div class="container">
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
        <a class="brand" href="/"><img src="/assets/favicon.jpg" width="26"/>Lifeteen Database</a>
        <ul class="nav">

            <li class="dropdown">
                <a class="dropdown-toggle"
                    data-toggle="dropdown"
                    href="#">
                    Contacts
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/contacts">Contact List</a></li>
                    <li><a href="/contacts/new.htm">New Contact</a></li>
                </ul>
            </li>
 

             <li class="dropdown">
                <a class="dropdown-toggle"
                    data-toggle="dropdown"
                    href="#">
                    Administration
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/date_event_types">Date Event Types</a></li>
                    <li><a href="/date_events">Date Events</a></li>
                     <li><a href="/events">Events</a></li>
                     <li><a href="/ministries">Ministries</a></li>
               </ul>
            </li>
       </ul>
        <form action="/contacts" class="navbar-search">
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-search"></i></span>
               <input id="contact-search" name="s" type="text" class="input-medium" autocomplete="off" placeholder="Search Contacts">
           <%= button_tag(type: 'submit', class: "btn") do %>
           Search
          <% end %>
              </div>
            </div>
         </form>
<script type="text/javascript">

$.getJSON('/all_contacts.json', function(data) {
  var contact_ids = [];
  var contacts = [];

  $.each(data, function(key, val) {
    var name = val.first_name + " " + val.last_name;
    contact_ids[name] = val.id
    contacts.push(name);
 });
$("#contact-search").typeahead({
    source : contacts,
    highlighter: function(item){
        return "<div><img src='/contacts/"+contact_ids[item]+"/image?time=<%=Time.now%>' width='22'/> "+item+"</div>";
    },

});
});


</script>
      </div>
      </div>
    </div>
   <%= yield %>
 </div>

</body>

</html>
